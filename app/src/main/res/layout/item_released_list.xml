<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp"
    android:layout_marginRight="9dp"
    android:layout_marginLeft="9dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_grey"
    android:id="@+id/listReleased">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/releasedImageIv"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/releasedNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toEndOf="@id/releasedImageIv"
        app:layout_constraintTop_toTopOf="@+id/releasedImageIv" />

    <TextView
        android:id="@+id/releasedLastnameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="3dp"
        app:layout_constraintLeft_toRightOf="@id/releasedImageIv"
        app:layout_constraintTop_toBottomOf="@+id/releasedNameTv" />

    <TextView
        android:id="@+id/releasedDateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:textColor="@color/green"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/releasedLastnameTv" />

</androidx.constraintlayout.widget.ConstraintLayout>